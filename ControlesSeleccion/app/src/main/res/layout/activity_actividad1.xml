<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividad1">

  <TextView
      android:id="@+id/lblTitulo_act1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="15dp"
      android:text="Elige un pais"
      android:textSize="25dp"
      android:textColor="@color/design_default_color_primary"
      android:textStyle="bold"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
    />

  <ListView
      android:id="@+id/lvPaises"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="15dp"
      app:layout_constraintTop_toBottomOf="@id/lblTitulo_act1"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
    />

  <TextView
      android:id="@+id/lblInfo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:textSize="17dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/lvPaises"
  />

  <Button
      android:id="@+id/btnVolver_act1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="volver"
      android:layout_margin="20dp"
      android:onClick="volver"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
    />


  </androidx.constraintlayout.widget.ConstraintLayout>